rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Uploads gerais (audio, attachments, etc) - acesso publico leitura
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if true; // API routes use admin SDK which bypasses rules
    }

    // Screenshots e attachments de feedbacks
    match /feedbacks/{feedbackId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Avatars de usuarios
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Logos de clientes
    match /clients/{clientId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Thumbnails de projetos
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
